{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module":"CommonJS",
    "lib": ["es2017", "dom"],
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "example"
  ],
  "exclude": [
    "**/__mocks__/*"
  ]
}